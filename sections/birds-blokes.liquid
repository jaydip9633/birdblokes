<script>
    const swiper = new Swiper('.swiper', {
    loop: false, // Enables infinite loop
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
      slidesPerView: 2,
  });
</script>

{% schema %}
{
  "name": "birds-blokes",
  "class": "set_bg_color",
  "settings": [
    {
      "type": "textarea",
      "id": "text1",
      "label": "Enter Text"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Enter Text"
    },
    {
      "type": "color",
      "id": "section_color",
      "label": "Select background color"
    },
    {
      "type": "range",
      "id": "p_top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 20,
      "label": "Padding top",
    },
    {
      "type": "range",
      "id": "p_bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 20,
      "label": "Padding bottom",
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "add_image",
      "settings": [
        {
          "type": "image_picker",
          "id": "images",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
    "name": "birds-blokes"
    }
  ]
}
{% endschema %}
