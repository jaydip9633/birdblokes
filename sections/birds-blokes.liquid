{{ 'bird-blokes.css' | asset_url | stylesheet_tag }}

<style>
  .set_bg_color{
    background: {{ section.settings.section_color }};
  }
  .set_bg_color{
    padding-top: {{ section.settings.p_top }}px;
    padding-bottom: {{ section.settings.p_bottom }}px;
  }
  @media (max-width: 991px){
  .set_bg_color{
    padding-top: 20px;
    padding-bottom: 16px;
  }
  }
</style>
<div class="container_120 bird-blokes">
  <div class="wrap_text">
    <h2 class="h56 para1">{{ section.settings.text1 }}</h2>
    <p class="para2">{{ section.settings.text2 }}</p>
  </div>

  <div class="swiper home_slider_one">
    <div class="img_slider swiper-wrapper">
      {% for block in section.blocks %}
        <div class="img_wrap_div swiper-slide">
          <img class="slider_img" src="{{ block.settings.images | img_url: 'master' }}">
        </div>
      {% endfor %}
    </div>
    <div class="wrap_prev_next">
      <div class="swiper-button-prev arrow_btn">
